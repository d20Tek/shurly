@page "/authentication/forgot-password"
@inject IAuthenticationService _authService;
@inject NavigationManager _nav;

<h4>Forgot your password</h4>
<p>Enter the email address associated with an account in this application.</p>

<div class="row">
    <div class="col-md-4">
        <EditForm Model="@input" OnValidSubmit="OnPostAsync">
            <DataAnnotationsValidator />
            <div class="form-floating mb-3">
                <InputText class="form-control" type="email" @bind-Value=input.Email
                           autocomplete="email" aria-required="true"
                           placeholder="name@example.com" />
                <label class="form-label" for="email">Email</label>
                <ValidationMessage For=@(() => input.Email) />
            </div>

            <button id="reset-password" type="submit" class="w-100 btn btn-lg btn-primary">
                Reset Password
            </button>
        </EditForm>
        <div class="my-2">@message</div>
    </div>
</div>
@if (hasResetCode)
{
    <hr />
    <div class="my-2">
        <p>This website hasn't integrated with a mail service yet, so your reset link is below:</p>
        <p>
            Please reset your password by 
            <a href="/authentication/reset-password/@resetCode">clicking here</a>.
         </p>
    </div>
}

@code {
    GetResetTokenRequest input = new();
    string message = string.Empty;
    string resetCode = string.Empty;
    bool hasResetCode => !string.IsNullOrEmpty(resetCode);

    private async Task OnPostAsync()
    {
        message = string.Empty;

        var response = await _authService.GetPasswordResetTokenAsync(input);
        response.MatchFirstError(
            success => resetCode = success.ResetToken,
            error => message = $"[{error.Code}]: {error.Message}");
    }
}

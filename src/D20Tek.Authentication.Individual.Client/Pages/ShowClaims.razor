@page "/authentication/claims"
@using Microsoft.AspNetCore.Authorization;
@attribute [Authorize]

<h3>Access Token Claims</h3>
<AuthorizeView>
    <Authorized>
      <table class="table">
        <thead>
          <tr>
            <th>Claim Type</th>
            <th>Value</th>
          </tr>
        </thead>
        <tbody>
        @foreach(var claim in context.User.Claims)
        {
          <tr>
            <td>@claim.Type</td>
            <td>@claim.Value</td>
          </tr>
        }
        </tbody>
        </table>
    </Authorized>
</AuthorizeView>
@page "/"

<PageTitle>Shurly-Home</PageTitle>

<h1>Shurly - Url Shortener</h1>
<p>A web application for creating and managing shortened URL redirects to your desired 
   full URLs. We allow authenticated users to save links that are easier to use in 
   social media or advertisements.</p>
<hr />

<AuthorizeView>
    <Authorized>
      <div>You are logged in... here is your access token information:</div>
      <table class="table">
        <thead>
          <tr>
            <th>Claim Type</th>
            <th>Value</th>
          </tr>
        </thead>
        <tbody>
        @foreach(var claim in context.User.Claims)
        {
          <tr>
            <td>@claim.Type</td>
            <td>@claim.Value</td>
          </tr>
        }
        </tbody>
        </table>
    </Authorized>
    <NotAuthorized>
        <LoginDisplay />
    </NotAuthorized>
</AuthorizeView>
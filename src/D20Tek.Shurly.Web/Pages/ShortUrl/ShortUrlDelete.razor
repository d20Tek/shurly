@page "/short-url/delete/{Id}"
@attribute [Authorize]
@inject ShurlyApiService _service;
@inject NavigationManager _nav;
@inject IJSRuntime _jsRuntime;

<h4 class="fw-bold">Delete Link</h4>
<div class="row">
    <div class="col-md-8 offset-md-2 col-sm-12">
        <p>
            Deleting this link will remove it from our redirection server. 
            Users will get errors if they attempt to click on this short link:
        </p>
        <p class="mx-3 fw-bold" style="background-color: lightgray">
            <div class="mx-1">@_linkName:</div>
            <div class="mx-1">@_shortUrl</div>
        </p>
        <p>
            This deletion cannot be undone. Are you sure you want to delete this link?
        </p>
        <div class="float-md-end my-1">
            <button id="cancel-button" class="btn btn-outline-secondary" @onclick=OnCancel>
                Cancel
            </button>
            <button id="delete-button" class="btn btn-danger" @onclick=OnDelete>
                Delete Link
            </button>
        </div>
    </div>
    <div class="col-md-8 offset-md-2 col-sm-12 mt-3">
        @_message
    </div>
</div>

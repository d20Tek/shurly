@page "/short-url"
@attribute [Authorize]
@inject ShurlyApiService _service;

<h4 class="fw-bold">My Links</h4>
<div class="row">
    <a class="btn btn-outline-primary btn-sm" style="max-width: 180px;"
       href=@Configuration.ShortUrl.CreateUrl>
       Create New Short Link
    </a>
</div>
<hr />

@if (_urlListResponse is not null)
{
    @if (_urlListResponse.Items.Any())
    {
        <div class="row">
            <div class="col col-xl-8 offset-xl-2">
                @foreach (var shortLink in _urlListResponse.Items)
                {
                    <ShortUrlListItem Link=@shortLink />
                }
            </div>
        </div>
    }
    else
    {
        <div class="row">You don't have any saved short links.
        <a href=@Configuration.ShortUrl.CreateUrl>Create one now!</a></div>
    }
}

<div>@_message</div>
<hr />
